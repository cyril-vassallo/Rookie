                    </div>
                </div>
                <div class="logo-zone">
                    <div>
                        <p class="text-center">By</p>
                        <img id="logo"src="public/assets/svg/logo.svg" alt="logo infinity-dev">
                    </div>
                </div>
            </div>
        </div>
        <script src="public/library/systemjs/system.min.js"></script>
        <script src="public/dist/shared/SystemJSLoader.js"></script>
		<script src="public/library/jquery/jquery.min.js"></script>
