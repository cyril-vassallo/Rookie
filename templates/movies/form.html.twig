
<form method="POST" action="confirm" class="container">
    <div class="row" hidden>
        <div class="col">
            <div class="form-group">
                <label for="id_movie">Id</label>
                <input placeholder="empty" class="form-control" type="text" name="id_movie" id="id_movie" disabled />
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="form-group">
                <label for="title_movie">Movie Title</label>
                <input placeholder="empty" class="form-control" type="text" name="title_movie" id="title_movie" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="duration_movie">Duration - Minutes</label>
                <input placeholder="empty" class="form-control" type="text" name="duration_movie" id="duration_movie" />
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label for="createdAt_movie">Registered At</label>
                <input placeholder="empty" class="form-control" type="date" name="createdAt_movie" id="createdAt_movie" />
            </div>
        </div>
    </div>
    <div class="row justify-content-center my-5">
        <button type="button" name='create' class="btn btn-success mx-2" id="btn_create">
            <img src="public/assets/svg/icon-tabler-circle-plus.svg" alt="create button"/>
            CREATE
        </button>
        <button type="button" name="update" class="btn btn-info mx-2" id="btn_update">
            <img src="public/assets/svg/icon-tabler-edit.svg" alt="update button"/>
            UPDATE
        </button>
        <button type="button" name="cancel" class="btn btn-primary mx-2" id="btn_cancel">
            <img src="public/assets/svg/icon-tabler-circle-x.svg" alt="cancel button"/>
            CANCEL
        </button>
        <button type="button" name="delete" class="btn btn-danger mx-2" id="btn_delete">
            <img src="public/assets/svg/icon-tabler-circle-minus.svg" alt="delete button"/>
            DELETE
        </button>
    </div>
</form>
  